<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:padding="18dp"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_centerHorizontal="true"
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mail_sms"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tvFullName"
            android:layout_below="@+id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Full Name"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edtFullName"
            android:layout_below="@id/tvFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/tvSurname"
            android:layout_below="@+id/edtFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Surname"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/edtSurname"
            android:layout_below="@id/tvSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/tvEmail"
            android:layout_below="@+id/edtSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="E-mail"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />
        <EditText
            android:id="@+id/edtEmail"
            android:layout_below="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="textEmailAddress"/>
        <TextView
            android:id="@+id/tvPassword"
            android:layout_below="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Password"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/edtPassword"
            android:layout_below="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_below="@+id/edtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Phone Number"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_below="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:inputType="phone"/>
        <com.scrounger.countrycurrencypicker.library.Buttons.CountryCurrencyButton
            android:id="@+id/btnCountry"
            android:layout_below="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:country_code="US"
            app:show_currency="true"
            android:background="@color/colorPrimary"
            android:layout_marginTop="16dp"/>
        <Button
            android:id="@+id/btnVerify"
            android:layout_below="@id/btnCountry"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonNext"
            android:textColor="@android:color/white"
            android:text="Verify"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnCancelVerify"
            android:layout_below="@id/btnVerify"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorButtonNext"
            android:textColor="@android:color/white"
            android:text="Cancel"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>



</ScrollView>